[user]
	name = Axel von Bertoldi\n
	email = axel.bertoldi@emc.com
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  ; shortcuts
  co = checkout
  ci = commit
  br = branch
  stat = status
  cp = cherry-pick
  ; log display
  graph = log --oneline --graph
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  all-my-commits = log --oneline --author='Axel von Bertoldi'
  ; branch manipulation
  new-branch = !sh -c 'git co -b z/bertoa/$1 origin/a/$2' -
  push-branch = !git push origin `git current-branch` -f
  push-branch-and-reupstream = !git push origin `git current-branch` && git br --set-upstream `git current-branch` origin/`git current-branch`
  delete-branch = !git push origin :$1
  rebase-branch = !git rebase --interactive HEAD~`git changes | wc -l`
  rebase-branch-to-upstream = !git rebase --interactive `git upstream`
  change-upstream = !sh -c 'git branch --set-upstream-to \"$@\"' -
  ; goodies
  current-branch = !git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \\(.*\\)/\\1/'
  upstream = !git branch --no-color -vv 2> /dev/null | sed -e '/^[^*]/d' -e 's/.*[0-9a-z]\\{7,7\\} \\[//' -e 's/:.*//' -e 's/\\].*//'
  changes = !git log --oneline `git upstream`..HEAD
  files = !git diff --name-only `git upstream`
  my-branches = !git br -a | grep --color bertoa
  fixup = !sh -c 'git commit -a -m \"fixup! $@\" && git rebase-branch' -
  squash = !sh -c 'git commit -a -m \"squash! $@\" && git rebase-branch' -
[core]
  editor = vim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[branch]
  autosetupmerge = true
  autosetuprebase = always
[rebase]
  autosquash = yes
[diff]
  tool = meld
[push]
  default = tracking
